<!-- ejs need ejs installed to render the file -->

<body>
<section class="feed-post">
    <h4>Posts</h4>
    <!-- if user is signed in then only view -->
    <%if(locals.user) {%>
    <form action="/posts/create" id="new-post-form" method="post">
        <textarea name="content" required id="" cols="30" rows="10"></textarea>
        <input type="submit" value="post">
    </form>
    <div id="posts-list-container">
        <ul>
            <%for (post of posts){%>
                <li>
                    <%=post.content %>
                    <br>
                    <small>
                        <%=post.user.name %>
                    </small>
                </li>
            <% }%>
        </ul>
    </div>
    <%}%>
</section>
</body>
